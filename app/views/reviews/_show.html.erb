<div class="review">
  <div class="spot-rating">
    <% review.rating.times do %>
      <i class="fa fa-star yellow-filled"></i>
    <% end %>
    <% (5 - review.rating).times do %>
      <i class="fa fa-star-o"></i>
    <% end %>
  </div>
  <h8><%= review.content %></h8>

  <p style="margin-bottom: 5px">Ajout√© par <%= review.user.first_name || review.user.email %> - il y a <%= time_ago_in_words(review[:created_at])%></p>
</div>
