<div class="container-fluid">
  <div class="row">
    <h1>List of all spots</h1>
  </div>


  <div class="row">

    <div class="col-xs-12 col-sm-12 col-md-8">
      <% @spots.each do |spot| %>
        <div class="col-xs-12 col-sm-6">
          <div class="spot-card" style="background-image: url('<%= cl_image_path("image1_henvzi.jpg", width: 330, height: 400, crop: :fill) %>')">
            <%= link_to "", spot_path(spot), class: "spot-card-link" %>
            <div class="spot-infos small">
              <h2><%= spot.name %></h2>
              <p class="spot-full-infos"><%= spot.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4">
      <h1>MAPS</h1>
        <div id="map" style="width: 100%; height: 100%;"></div>

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({ internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });
            });
          <% end %>
        <% end %>
    </div>

  </div>

</div>

