<div class="container-fluid" id="full-navbar">
  <div id="navbar-top">

    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand", id:"logo" do %>
      <%= render "pages/wind_button" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-right hidden-xs hidden-sm">

      <%= link_to "All spots", spots_path, class: "navbar-item navbar-link" %>

      <% if user_signed_in? %>
        <%= link_to "My favorite spots", favorite_spots_path, class: "navbar-item navbar-link" %>
      <% end %>

      <%= link_to "Submit a spot", new_spot_path, class: "navbar-item navbar-link" %>
      <!-- Different navigation if login or not -->
      <% if user_signed_in? %>

        <%= link_to "Profile", user_path(current_user), class: "navbar-item navbar-link" %>
        <%= link_to "Log out", destroy_user_session_path, class: "navbar-item navbar-link", method: :delete %>
      <% else %>
        <!-- Login text link -->
        <%= link_to t(".sign_in", default: "Sign in / Sign up"), new_user_session_path, class: "navbar-item navbar-link" %>

      <% end %>

    </div>
  </div>
</div>
